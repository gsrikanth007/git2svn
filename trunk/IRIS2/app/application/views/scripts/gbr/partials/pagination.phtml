<?php if ($this->pageCount): ?>
    <div class="paginationControl">
        <?php if(isset($this->previous)): ?>
            <a class="previousOption" href="<?php echo $this->url(array('page' => $this->previous)); ?><?php echo $this->queryString; ?>">&lt; Previous</a>
        <?php else: ?>
            <span class="previousOption disabled">&lt; Previous</span>
        <?php endif; ?>

        <?php foreach($this->pagesInRange as $page): ?>
            <?php if ($page != $this->current): ?>
                <a class="pageOption" href="<?php echo $this->url(array('page' => $page)); ?><?php echo $this->queryString; ?>"><?php echo $page; ?></a>
            <?php else: ?>
                <span class="pageOption selected"><?php echo $page; ?></span>
            <?php endif; ?>
        <?php endforeach; ?>

        <?php if (isset($this->next)): ?>
            <a class="nextOption" href="<?php echo $this->url(array('page' => $this->next)); ?><?php echo $this->queryString; ?>">Next &gt;</a>
        <?php else: ?>
            <span class="nextOption disabled">Next &gt;</span>
        <?php endif; ?>
    </div>
<?php endif; ?>